<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivCandy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/donut_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCandyDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Cady Description Text"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/ivCandy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCandy"
        app:layout_constraintBottom_toBottomOf="@id/ivCandy"/>

</androidx.constraintlayout.widget.ConstraintLayout>